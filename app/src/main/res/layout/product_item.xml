<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7.5"
                app:cardCornerRadius="30dp"
                app:cardElevation="7dp"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/productImage"
                    android:layout_margin="@dimen/margin_big"
                    app:srcCompat="@drawable/backgroud"
                    android:scaleType="centerInside"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:orientation="vertical">
                <TextView
                    style="@style/HeaderText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/productTitle"
                    android:text="John Hardy Women's Legends Naga Gold  Silver Dragon Station Chain Bracelet"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:layout_marginStart="@dimen/margin_top_small"
                    android:layout_marginEnd="@dimen/margin_top_small"
                    android:layout_marginTop="@dimen/margin_top_small"/>
                <TextView
                    style="@style/HeaderText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cost"
                    android:text="$430"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:layout_marginStart="@dimen/margin_top_small"
                    android:layout_marginEnd="@dimen/margin_top_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_top_small"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
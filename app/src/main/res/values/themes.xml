<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IceCommTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/orange</item>
        <!-- Navigation bar color. -->


        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar"
            tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="HeaderText" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="fontFamily">@font/nunito_sans_semibold</item>
    </style>

    <style name="SubText">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="fontFamily">@font/nunito_sans_bold</item>
    </style>

    <style name="EditTextTextStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/text_edit_text</item>
    </style>

    <style name="EditTextTextStyle2">
        <item name="android:textColor">@color/text_edit_text</item>
    </style>

    <style name="LogoText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ibm_plex_sans_bold</item>
    </style>

    <style name="DetailsText">
        <item name="android:textSize">@dimen/nav_text_size</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="fontFamily">@font/nunito_sans_semibold</item>
    </style>

    <style name="ButtonText">
        <item name="android:textSize">@dimen/nav_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/nunito_sans_semibold</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <dimen name="normal_text_size">13sp</dimen>
    <dimen name="nav_text_size">15sp</dimen>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="appbar_padding">16dp</dimen>
    <dimen name="fab_margin">16dp</dimen>
    <dimen name="appbar_padding_top">8dp</dimen>
    <dimen name="tab_text_size">20sp</dimen>
    <dimen name="margin_top_big">20dp</dimen>
    <dimen name="margin_top_small">16dp</dimen>
    <dimen name="margin_big">24dp</dimen>
    <dimen name="header_text_size">18sp</dimen>
    <dimen name="edit_text_height">55dp</dimen>
    <dimen name="edit_text_height_2">85dp</dimen>
    <dimen name="edit_text_height_3">50dp</dimen>
    <dimen name="edit_text_height_4">45dp</dimen>
    <dimen name="margin_small">7dp</dimen>
    <dimen name="padding_start_edit_text">16dp</dimen>
    <dimen name="call_to_action_button_text">16sp</dimen>
    <dimen name="action_button_padding">14dp</dimen>
    <dimen name="profile_avatar_size">100dp</dimen>
    <dimen name="dialogWidth">250dp</dimen>
    <dimen name="dialogHeight">1000dp</dimen>
    <dimen name="padding_small_icon">8dp</dimen>
    <dimen name="avatar_size">45dp</dimen>
    <dimen name="favorite_text_size">16sp</dimen>
    <dimen name="profile_name_text">20sp</dimen>
    <dimen name="text_margin">16dp</dimen>

</resources>